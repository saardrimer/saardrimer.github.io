@inproceedings{DeMulderBOD+_EMAFPGA_ECC05,
  author       = {Elke {De Mulder} and Pieter Buysschaert and Siddika Berna {\"{O}}rs and Peter Delmotte and Bart Preneel and Guy Vandenbosch and Ingrid Verbauwhede},
