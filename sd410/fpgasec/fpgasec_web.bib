@inproceedings{HuffmireBWSKLNI_MoatsDrawbridges_IEEESP07,
  author       = {Ted Huffmire and Brett Brotherton and Gang Wang and Timothy Sherwood and Ryan Kastner and Timothy Levin and Thuy Nguyen and Cynthia Irvine},
  title        = {Moats and drawbridges: an isolation primitive for reconfigurable hardware based systems},
  booktitle    = {IEEE Symposium on Security and Privacy},
