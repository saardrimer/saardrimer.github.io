@inproceedings{SaggeseMMS_AES_FPL05,
  title        = {An {FPGA-based} performance analysis of the unrolling, tiling, and pipelining of the {AES} algorithm},
  author       = {G.P. Saggese and A. Mazzeo and N. Mazzocca and A.G.M. Strollo},
